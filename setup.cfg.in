[build_ext]
include_dirs="c:/vigra_depend_x64/include";"C:/Program Files/vigra/include"
library_dirs=c:/vigra_depend_x64/include";"C:/Program Files/vigra/lib"
libraries=boost_python-vc120-mt-1_42.lib

[py2app]
# setting argv_emulation causes the app to get stuck in the splash screen
# don't use optimize=1, sklearn needs doc strings by any means to not cause a
# crash in the bundle
argv_emulation=False
strip=True
optimize=1
iconfile=resources/cecog_analyzer_icon.icns
packages=h5py,vigra,sklearn
arch=x86_64
matplotlib_backends=agg,qt4agg,macosx

[py2exe]
optimize=1
compressed=True
skip_archive=False
bundle_files=3
packages=h5py,vigra,sklearn
